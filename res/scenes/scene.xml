<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!-- Demo scene -->
<scene>
    <tree>
        <!-- "id" is a mandatory attribute, the value should be always unique -->
        <node id="A">
            <node id="B">
                <!-- Vector values can be either omitted or verbosely described -->
                <position>
                    <x>-1.0</x>
                    <y>-2.0</y>
                    <z>-3.0</z>
                </position>
                <scale>
                    <x>-1.0</x>
                    <y>-32.0</y>
                    <z>-3.0</z>
                </scale>
                <rotation>
                    <x>10.0</x>
                    <y>500.0</y>
                    <z>2.0</z>
                </rotation>
            </node>
            <node id="C">
                <position>
                    <x>1.0</x>
                    <y>2.0</y>
                    <z>3.0</z>
                </position>
            </node>
        </node>
    </tree>
</scene>