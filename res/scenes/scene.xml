<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!-- Demo scene -->
<scene>
    <environment>
        <skybox>
            <positive_x>./res/textures/skybox_posx.hdr</positive_x>
            <negative_x>./res/textures/skybox_negx.hdr</negative_x>
            <positive_y>./res/textures/skybox_posy.hdr</positive_y>
            <negative_y>./res/textures/skybox_negy.hdr</negative_y>
            <positive_z>./res/textures/skybox_posz.hdr</positive_z>
            <negative_x>./res/textures/skybox_negz.hdr</negative_x>
        </skybox>
        <skybox_irradiance>
            <positive_x>./res/textures/irradiance_posx.hdr</positive_x>
            <negative_x>./res/textures/irradiance_negx.hdr</negative_x>
            <positive_y>./res/textures/irradiance_posy.hdr</positive_y>
            <negative_y>./res/textures/irradiance_negy.hdr</negative_y>
            <positive_z>./res/textures/irradiance_posz.hdr</positive_z>
            <negative_x>./res/textures/irradiance_negz.hdr</negative_x>
        </skybox_irradiance>
    </environment>
    <tree>
        <node name="root">
            <node name="camera_handler">
                <camera name="camera">
                    <position>
                        <x>0.0</x>
                        <y>0.0</y>
                        <z>3.0</z>
                    </position>
                    <near>0.01</near>
                    <far>1000.0</far>
                    <fov>1.0</fov>
                </camera>
            </node>
            <node name="monkey">
                <model>
                    <material>
                        <albedo_map>./res/textures/albedo.png</albedo_map>
                        <metalness_map>./res/textures/metalness.png</metalness_map>
                        <roughness_map>./res/textures/roughness.png</roughness_map>
                        <normal_map>./res/textures/normal.png</normal_map>
                        <metalness>1.0</metalness>
                        <roughness>1.0</roughness>
                    </material>
                    <mesh_path>./res/meshes/monkey.fbx</mesh_path>
                </model>
            </node>
        </node>
    </tree>
</scene>